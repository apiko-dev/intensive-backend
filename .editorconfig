root = true

[*]
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.json]
trim_trailing_whitespace = true

[*.js]
indent_size = 2
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.sql]
indent_size = 2
indent_style = tab
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true
